    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api/server.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Flask Scenario Demo",
            "type": "debugpy",
            "request": "launch"
        },
        {
            "name": "Node debug js payloads",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app/baits/fetch.js"
        }
    ]
}